        script(type='text/javascript').
            var elem50 = document.getElementById('icon_wrapper_50');
            var elem100 = document.getElementById('icon_wrapper_100');
            var elem150 = document.getElementById('icon_wrapper_150');

            window.addEventListener("mousemove", mouseMove);

            function mouseMove(event) {
                var windowWidth = window.innerWidth;
                var windowHeight = window.innerHeight;
                var deltaX = (event.clientX - windowWidth / 2) / windowWidth;
                var deltaY = (event.clientY - windowHeight / 2) / windowHeight;
                var transX, transY;

                for (i = 0; i < elem50.childNodes.length; i++) {
                    transX = deltaX * 5;
                    transY = deltaY * 5;
                    elem50.childNodes[i].style = 'transform: translate3d(' + transX + 'px, ' + transY + 'px, 0px);';
                }

                for (i = 0; i < elem100.childNodes.length; i++) {
                    transX = deltaX * 10;
                    transY = deltaY * 10;
                    elem100.childNodes[i].style = 'transform: translate3d(' + transX + 'px, ' + transY + 'px, 0px);';
                }

                for (i = 0; i < elem150.childNodes.length; i++) {
                    transX = deltaX * 35;
                    transY = deltaY * 35;
                    elem150.childNodes[i].style = 'transform: translate3d(' + transX + 'px, ' + transY + 'px, 0px);'
                        + '-webkit-transform: translate3d(' + transX + 'px, ' + transY + 'px, 0px);';
                }
            }
